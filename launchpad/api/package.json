{
  "name": "launchpad-api",
  "type": "module",
  "version": "0.1.0",
  "description": "Backend for launchpad",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "eslint": "eslint ./src",
    "flow:check": "flow check",
    "flow:build": "flow-remove-types ./src/ -d ./dist/ --all --pretty",
    "build": "yarn eslint && yarn flow:check && yarn flow:build",
    "serve": "yarn flow:build && PORT=8080 node --inspect=0.0.0.0:9229 ./dist/index.js",
    "start": "nodemon --watch src -x \"yarn serve\""
  },
  "devDependencies": {
    "flow-bin": "^0.175.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "flow-remove-types": "^2.175.0",
    "mongodb": "^4.4.1",
    "nodemon": "^2.0.15"
  }
}
