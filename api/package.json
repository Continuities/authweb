{
  "name": "authweb-api",
  "type": "module",
  "version": "0.1.0",
  "description": "Backend for authweb",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "eslint": "eslint ./src",
    "flow:check": "flow check",
    "flow:build": "flow-remove-types ./src/ -d ./dist/ --all --pretty",
    "build": "yarn eslint && yarn flow:check && yarn flow:build",
    "serve": "yarn flow:build && PORT=8080 node --inspect ./dist/index.js",
    "start": "nodemon --watch src -x \"yarn serve\""
  },
  "dependencies": {
    "express": "^4.17.1",
    "flow-remove-types": "^2.161.0",
    "nodemon": "^2.0.13"
  }
}
